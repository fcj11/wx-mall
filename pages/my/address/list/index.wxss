/* pages/my/address/list/index.wxss */
.address-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  position: fixed;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.address-list {
  padding: 20rpx;
}

.address-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.address-item::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff2d4a, #ff6b6b);
  opacity: 0.8;
}

.user-info {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 20rpx;
  color: #333;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  font-size: 22rpx;
  color: #ff2d4a;
  background: rgba(255, 45, 74, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.operations {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.operation-item {
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}

.operation-text {
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.operation-item:first-child .operation-text {
  color: #ff2d4a;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  padding: 0 60rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-tip text {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
}

.add-btn {
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #ff2d4a, #ff6b6b);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 45, 74, 0.3);
  margin-bottom: 30rpx;
}

.safe-area-block {
  height: env(safe-area-inset-bottom);
  background: transparent;
}