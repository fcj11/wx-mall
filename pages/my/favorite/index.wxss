.favorite-container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.favorite-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-price {
  margin-bottom: 16rpx;
}

.price {
  font-size: 32rpx;
  color: #ff2d4a;
  font-weight: bold;
  margin-right: 16rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: #ff2d4a;
  color: #fff;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 