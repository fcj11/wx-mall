/* pages/my/footprints/index.wxss */
.footprints-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

/* 商品列表样式 */
.goods-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.goods-content {
  display: flex;
  padding: 20rpx;
  padding-right: 80rpx;  /* 为删除按钮预留空间 */
}

.goods-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #f7f7f7;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff2d4a;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.browse-time {
  font-size: 24rpx;
  color: #999;
}

/* 删除按钮样式 */
.action-buttons {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.action-btn {
  width: 48rpx !important;
  min-width: 48rpx !important;
  height: 48rpx;
  padding: 0 !important;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: none;
  transition: all 0.3s;
}

.btn-icon {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

/* 按钮点击效果 */
.action-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 加载状态样式 */
.loading-status {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.empty {
  padding: 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  color: #ddd;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 添加商品卡片点击效果 */
.goods-item {
  transition: transform 0.3s;
}

.goods-item:active {
  transform: scale(0.98);
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 使用增强滚动 */
scroll-view {
  -webkit-overflow-scrolling: touch;
}