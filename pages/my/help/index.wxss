.help-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 搜索框 */
.search-section {
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 热门问题 */
.hot-section {
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.hot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hot-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #666;
}

/* 问题分类 */
.category-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.category-item {
  border-bottom: 1rpx solid #f5f5f5;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
}

.category-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.question-list {
  padding: 0 20rpx;
}

.question-item {
  border-bottom: 1rpx solid #f5f5f5;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.question-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.arrow {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
  transition: transform 0.3s;
}

.arrow.up {
  transform: rotate(-90deg);
}

.question-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 0 20rpx;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s;
  opacity: 0;
}

.question-content.expanded {
  padding: 20rpx;
  max-height: 1000rpx;
  opacity: 1;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

/* 联系客服 */
.contact-section {
  padding: 40rpx 20rpx;
}

.contact-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff2d4a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
} 