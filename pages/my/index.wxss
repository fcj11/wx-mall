.my-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #ff2d4a, #ff6b6b);
  padding: 40rpx 30rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  flex: 1;
  margin-left: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.tips {
  font-size: 24rpx;
  opacity: 0.8;
}

.arrow {
  font-size: 32rpx;
  opacity: 0.8;
}

/* 订单状态区域 */
.order-section {
  background: #fff;
  border-radius: 16rpx;
  margin: -40rpx 20rpx 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 26rpx;
  color: #999;
}

.more .arrow {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.order-types {
  display: flex;
  justify-content: space-between;
}

.type-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.type-item .icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.type-item text:last-child {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #ff2d4a;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
}

/* 功能菜单区域 */
.menu-section {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 20rpx;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-item .title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: normal;
}

.menu-item .arrow {
  font-size: 24rpx;
  color: #999;
}

/* 客服按钮 */
.contact-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff2d4a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 40rpx auto;
  box-shadow: 0 4rpx 12rpx rgba(255, 45, 74, 0.3);
}

.contact-btn::after {
  border: none;
}

/* 底部安全区域 */
.safe-area-block {
  height: env(safe-area-inset-bottom);
  width: 100%;
} 