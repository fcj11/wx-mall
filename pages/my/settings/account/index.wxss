.account-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.settings-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-value {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 绑定列表样式 */
.bind-list {
  display: flex;
  gap: 30rpx;
}

.bind-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
  transition: all 0.3s;
}

.bind-item.bound {
  opacity: 1;
}

.bind-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.bind-item text {
  font-size: 22rpx;
  color: #666;
}

/* 认证状态样式 */
.status {
  font-size: 26rpx;
  color: #999;
}

.status.verified {
  color: #07c160;
}

/* 危险区域样式 */
.danger-zone {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.danger {
  color: #ff4d4f !important;
}

/* 提示样式 */
.tips {
  padding: 30rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

/* 添加点击效果 */
.settings-item {
  transition: background-color 0.3s;
}

.settings-item:active {
  background-color: #f5f5f5;
}

.bind-item:active {
  transform: scale(0.95);
}

/* 账号信息 */
.account-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.account-id {
  font-size: 24rpx;
  color: #999;
}

/* 菜单列表 */
.menu-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.title {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 注销账号 */
.delete-account {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff2d4a;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 12rpx;
} 