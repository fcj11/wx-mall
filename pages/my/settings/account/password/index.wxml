<!--pages/my/settings/account/password/index.wxml-->
<view class="password-container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">原密码</text>
      <input class="input" 
             type="password"
             placeholder="请输入原密码"
             value="{{oldPassword}}"
             data-field="oldPassword"
             bindinput="handleInput"/>
    </view>
    <view class="form-item">
      <text class="label">新密码</text>
      <input class="input" 
             type="password"
             placeholder="请输入新密码"
             value="{{newPassword}}"
             data-field="newPassword"
             bindinput="handleInput"/>
    </view>
    <view class="form-item">
      <text class="label">确认密码</text>
      <input class="input" 
             type="password"
             placeholder="请再次输入新密码"
             value="{{confirmPassword}}"
             data-field="confirmPassword"
             bindinput="handleInput"/>
    </view>
  </view>

  <button class="submit-btn" bindtap="handleSubmit">确认修改</button>
</view>