/* pages/my/settings/account/phone/index.wxss */
.phone-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.code-input {
  flex: 0.6;
}

.code-btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ff2d4a;
  border: 1rpx solid #ff2d4a;
  border-radius: 30rpx;
}

.code-btn.disabled {
  color: #999;
  border-color: #ddd;
}

.tips {
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.tips text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.tips text:first-child {
  color: #333;
  margin-bottom: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff2d4a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}