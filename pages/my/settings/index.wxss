/* pages/my/settings/index.wxss */
.settings-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.settings-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.cache-size, .version {
  font-size: 26rpx;
  color: #999;
}

.about-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.logout-btn {
  margin: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #ff2d4a;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}