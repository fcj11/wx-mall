/* pages/order/detail/index.wxss */
.order-detail {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 状态区域 */
.status-section {
  background: #ff2d4a;
  color: #fff;
  padding: 40rpx 30rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 地址区域 */
.address-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.address-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.user-info {
  margin-bottom: 10rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 商品区域 */
.goods-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
}

.price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 30rpx;
  color: #ff2d4a;
  font-weight: bold;
}

.quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.info-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.copy {
  font-size: 24rpx;
  color: #ff2d4a;
  margin-left: 20rpx;
}

/* 价格信息 */
.price-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item .label {
  font-size: 26rpx;
  color: #666;
}

.price-item .value {
  font-size: 26rpx;
  color: #333;
}

.price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.price-item.total .label,
.price-item.total .value {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff2d4a;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn.primary {
  background: #ff2d4a;
  color: #fff;
  border: none;
}

.safe-area-block {
  height: env(safe-area-inset-bottom);
  width: 100%;
}

/* 分享按钮样式 */
.share-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 12rpx;
}

.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  padding: 0;
  line-height: 1.5;
  color: #333;
  font-size: 24rpx;
}

.share-btn::after {
  border: none;
}

.share-btn .icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}