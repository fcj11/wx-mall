/* pages/order/logistics/index.wxss */
.logistics-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.logistics-header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.company-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.company-detail {
  flex: 1;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.tracking-info {
  display: flex;
  align-items: center;
}

.tracking-number {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.copy {
  font-size: 24rpx;
  color: #ff2d4a;
  padding: 4rpx 12rpx;
}

.delivery-status {
  font-size: 28rpx;
  color: #ff2d4a;
  font-weight: 500;
}

.timeline {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.timeline-item {
  position: relative;
  padding-left: 30rpx;
  padding-bottom: 40rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.time-point {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ddd;
  border-radius: 50%;
}

.timeline-item.active .time-point {
  background: #ff2d4a;
  box-shadow: 0 0 0 6rpx rgba(255, 45, 74, 0.1);
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 7rpx;
  top: 24rpx;
  bottom: 0;
  width: 2rpx;
  background: #eee;
}

.timeline-item:last-child::before {
  display: none;
}

.track-info {
  padding-left: 20rpx;
}

.track-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.timeline-item.active .track-desc {
  color: #ff2d4a;
  font-weight: bold;
}

.track-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.contact-btn {
  display: inline-block;
  font-size: 24rpx;
  color: #ff2d4a;
  padding: 6rpx 16rpx;
  border: 1rpx solid #ff2d4a;
  border-radius: 24rpx;
  margin-top: 8rpx;
}

.footer-tips {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}