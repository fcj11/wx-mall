/* pages/order/rate/index.wxss */
.rate-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 商品信息 */
.goods-info {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-detail {
  flex: 1;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
}

/* 评分部分 */
.rate-section {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.star-rating {
  display: flex;
  gap: 10rpx;
}

.star {
  font-size: 40rpx;
  color: #ddd;
}

.star.active {
  color: #ff2d4a;
}

/* 评价内容 */
.content-section {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.image-section {
  padding: 20rpx 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.upload-btn .icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-btn .text {
  font-size: 24rpx;
  color: #999;
}

/* 匿名评价 */
.anonymous-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #ff2d4a;
  color: #fff;
  font-size: 32rpx;
}