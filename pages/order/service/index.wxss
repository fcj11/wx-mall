.service-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 商品卡片 */
.goods-card {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
}

.goods-price {
  font-size: 32rpx;
  color: #ff2d4a;
  font-weight: bold;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 服务类型 */
.type-group {
  display: flex;
  gap: 40rpx;
}

.type-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.type-item radio {
  margin-right: 8rpx;
}

/* 退款原因 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 退款金额 */
.amount-input {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.currency {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.amount-input input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.amount-tip {
  font-size: 24rpx;
  color: #999;
}

/* 问题描述 */
.description-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.upload-btn .icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-btn .text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #ff2d4a;
  color: #fff;
  font-size: 32rpx;
} 