.search-container {
  min-height: 100vh;
  background: #fff;
}

/* 搜索框 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrap {
  flex: 1;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  margin: 0 16rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx;
}

/* 搜索历史和热门搜索 */
.search-history,
.hot-search {
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.clear-btn {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.clear-btn icon {
  margin-right: 4rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #f7f7f7;
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #666;
}

.tag-item.hot {
  color: #ff2d4a;
  background: rgba(255, 45, 74, 0.1);
}

/* 搜索结果 */
.search-result {
  min-height: calc(100vh - 112rpx);
  background: #f8f8f8;
  padding: 20rpx;
}

.loading {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff2d4a;
  font-weight: bold;
}

.goods-sales {
  font-size: 24rpx;
  color: #999;
}

/* 添加下拉框样式 */
.search-dropdown {
  position: absolute;
  top: 112rpx;
  left: 0;
  right: 0;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 600rpx;
  overflow-y: auto;
}

.dropdown-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.dropdown-item:active {
  background: #f8f8f8;
}

.dropdown-item icon {
  margin-right: 12rpx;
  opacity: 0.5;
} 